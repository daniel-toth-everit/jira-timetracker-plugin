            <div class="jttp-headline">
              <div class="aui-group aui-group-split">
                 <div class="aui-item">
                 #if($isProgressDaily)
                   <div class="jttp-headline-progress" id="jttp-headline-progress">
                     <div class="jttp-headline-progress-date" id="jttp-headline-progress-date">${dateFormatted}</div>
                     <div class="jttp-headline-progress-number" id="jttp-headline-progress-number">$daySumIndustryFormatted / $hoursPerDayFormatted</div>
                     <div id="jttp-headline-progress-bar">
                       <div id="jttp-headline-progress-indicator" class="aui-progress-indicator" data-jttp-percent="$dailyPercent">
                         <span class="aui-progress-indicator-value" />
                       </div>
                     </div>
                   </div>
                 #else
                   <div class="jttp-headline-date" id="jttp-headline-date">
                       <p>${dateFormatted}</p>
                   </div>
                 #end
                 </div>
                 <div class="aui-item">
                   <div class="buttons-container" id="jttp-headline-day-stepper-container">
                     <button id="jttp-headline-day-calendar" type="button" class="aui-button" value="${dateFormatted}" title="Pick a date" onchange="return everit.jttp.main.copySelectedDate();" >
                       <span class="aui-icon aui-icon-small aui-iconfont-calendar">Open calendar</span>
                     </button>
                     <form class="aui top-label" id="jttp-datecahnge-form" method="get" action="JiraTimetrackerWebAction.jspa" onsubmit="return everit.jttp.main.beforeSubmitChangeDate();">
                       <div class="aui-buttons stepper-group-container">
                         <button id="jttp-headline-day-prev" class="aui-button" title="Previous day" type="submit" id="dayBack"  name="dayBack" >
                           <span class="aui-icon aui-icon-small aui-iconfont-arrows-left">Previous day</span>
                         </button>
                         <button class="aui-button button-today" id="today" name="today" title="$i18n.getText('plugin.today.button')"> 
                            $i18n.getText('plugin.today.button')
                         </button>
                         <button id="jttp-headline-day-next" class="aui-button" title="Next day" type="submit" id="dayNext" name="dayNext">
                           <span class="aui-icon aui-icon-small aui-iconfont-arrows-right">Next day</span>
                         </button>>
                       </div>
                       <input type="text" id="dateHidden" class="aui-date-picker" name="dateHidden" value="${dateFormatted}" style="display: none" onchange="this.form.datesubmit.click()" />
                       <input type="submit" id="datesubmit" name="datesubmit" class="spaced" style="display: none"/>
                     </form>
                   </div>
                 </div>
              </div>
            </div>
